{
    "manifest_version": 2,

    "name": "PlayerStat",
    "description": "",
    "version": "0.0.1",

    "broser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html",
        "default_title": "Show your stat"
    },

    "permissions": [
        "storage",
        "history"
    ],

    "chrome_url_overrides": {
        "pageToOverride": "current_stat.html"
    },

    "options_ui": {
        "page": "settings.html",
        "chrome_style": true
    }
}